{
  "name": "commithelper",
  "version": "1.0.0",
  "description": "A tool to create and lint commit messages",
  "keywords": [
    "commit",
    "lint",
    "cli"
  ],
  "author": "Jan van Br√ºgge",
  "license": "MIT",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write ./src",
    "commit": "ts-node src/index.ts prompt"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "commithelper": {
    "scopeOverrides": {
        "chore": ["tools", "deps", "docs", "examples"]
    }
  },
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.32",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.1.0",
    "fp-ts": "^2.9.5",
    "inquirer": "^8.0.0",
    "io-ts": "^2.2.15"
  }
}
